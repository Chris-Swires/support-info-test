    <script>
        // Slideshow Logic
        const container = document.getElementById('slideshow-container');

        // Wait for DOM to be fully loaded to count slides after injection
        document.addEventListener('DOMContentLoaded', () => {
            const slides = document.querySelectorAll('.slide');
            const prevBtn = document.getElementById('prevBtn');
            const nextBtn = document.getElementById('nextBtn');
            const currentSlideEl = document.getElementById('currentSlide');
            const totalSlidesEl = document.getElementById('totalSlides');
            const slideIndicator = document.getElementById('slideIndicator');
            const progressBar = document.getElementById('progressBar');

            let currentIndex = 0;
            const totalSlides = slides.length;

            totalSlidesEl.textContent = totalSlides;

            // Create indicator dots
            slides.forEach((_, index) => {
                const dot = document.createElement('div');
                dot.classList.add('slide-indicator-dot');
                if (index === 0) dot.classList.add('active');
                dot.addEventListener('click', () => goToSlide(index));
                slideIndicator.appendChild(dot);
            });

            const dots = document.querySelectorAll('.slide-indicator-dot');

            function updateSlideState() {
                container.style.transform = `translateX(-${currentIndex * 100}vw)`;
                currentSlideEl.textContent = currentIndex + 1;

                dots.forEach((dot, index) => {
                    dot.classList.toggle('active', index === currentIndex);
                });

                prevBtn.disabled = currentIndex === 0;
                nextBtn.disabled = currentIndex === totalSlides - 1;

                const progress = ((currentIndex + 1) / totalSlides) * 100;
                progressBar.style.width = `${progress}%`;

                // Reveal animation
                const currentSlide = slides[currentIndex];
                const reveals = currentSlide.querySelectorAll('.reveal');
                setTimeout(() => {
                    reveals.forEach(el => el.classList.add('visible'));

                    // Trigger Slide 3 (Branching) Animation
                    if (currentIndex === 2) {
                        runBranchingAnimation();
                    }

                    // Trigger Slide 4 (Authoring Core) Interactive Editor
                    if (currentIndex === 3) {
                        runEditorAnimation();
                    }

                    // Trigger Slide 5 (Review & Workflow) Interactive Panel
                    if (currentIndex === 4) {
                        runReviewAnimation();
                    }
                }, 100);
            }

            // Animation Helpers
            const wait = (ms) => new Promise(resolve => setTimeout(resolve, ms));

            async function typeText(element, text, speed = 50) {
                element.textContent = '';
                for (let i = 0; i < text.length; i++) {
                    element.textContent += text.charAt(i);
                    await wait(speed);
                }
            }

            // Slide 3: Refined Branching Animation (Full Workflow)
            async function runBranchingAnimation() {
                const elements = {
                    main: document.getElementById('branch-main'),
                    mainLabel: document.getElementById('main-label'),
                    lineMainExt: document.getElementById('line-main-ext'),
                    ext: document.getElementById('branch-ext'),
                    extLabel: document.getElementById('ext-label'),
                    lineExtBranch: document.getElementById('line-ext-branch'),
                    lineBranchHorizontal: document.getElementById('line-branch-horizontal'),
                    lineBranchP1: document.getElementById('line-branch-p1'),
                    lineBranchP2: document.getElementById('line-branch-p2'),
                    p1: document.getElementById('branch-proj-1'),
                    lineP1Tasks: document.getElementById('line-proj1-tasks'),
                    p2: document.getElementById('branch-proj-2'),
                    lineP2Tasks: document.getElementById('line-proj2-tasks'),
                    t1: document.getElementById('branch-task-1'),
                    t2: document.getElementById('branch-task-2'),
                    t3: document.getElementById('branch-task-3'),
                    t4: document.getElementById('branch-task-4'),
                    t5: document.getElementById('branch-task-5'),
                    t1Glow: document.getElementById('task-1-glow'),
                    pulse: document.getElementById('rebase-pulse'),
                    status: document.getElementById('workflow-status')
                };

                if (!elements.main) return;

                // --- RESET ---
                Object.values(elements).forEach(el => {
                    if (el && el.style) {
                        el.style.opacity = '0';
                        el.style.transform = '';
                        el.style.backgroundColor = '';
                    }
                });

                // Explicit line resets
                if (elements.lineMainExt) elements.lineMainExt.style.height = '0';
                if (elements.lineExtBranch) {
                    elements.lineExtBranch.style.height = '0';
                    elements.lineExtBranch.style.backgroundColor = '';
                }
                if (elements.lineBranchHorizontal) {
                    elements.lineBranchHorizontal.style.width = '0';
                    elements.lineBranchHorizontal.style.backgroundColor = '';
                }
                if (elements.lineBranchP1) {
                    elements.lineBranchP1.style.height = '0';
                    elements.lineBranchP1.style.backgroundColor = '';
                }
                if (elements.lineBranchP2) {
                    elements.lineBranchP2.style.height = '0';
                    elements.lineBranchP2.style.backgroundColor = '';
                }
                if (elements.lineP1Tasks) {
                    elements.lineP1Tasks.style.height = '0';
                    elements.lineP1Tasks.style.backgroundColor = '';
                }
                if (elements.lineP2Tasks) {
                    elements.lineP2Tasks.style.height = '0';
                    elements.lineP2Tasks.style.backgroundColor = '';
                }

                elements.status.textContent = 'READY';
                elements.status.style.opacity = '0';
                elements.status.style.color = '';
                elements.status.style.borderColor = '';
                elements.t1.style.transform = 'scale(1)';

                await wait(800);

                // --- STEP 0: Build Base Hierarchy ---
                elements.main.style.opacity = '1';
                elements.mainLabel.style.opacity = '1';
                await wait(400);

                // MAIN to EXT
                elements.lineMainExt.style.height = '32px';
                await wait(700);

                elements.ext.style.opacity = '1';
                elements.extLabel.style.opacity = '1';
                await wait(400);

                // EXT to Branch Point
                elements.lineExtBranch.style.height = '24px';
                await wait(500);

                // Horizontal bar
                elements.lineBranchHorizontal.style.width = '240px';
                await wait(700);

                // Branch down to Projects
                elements.lineBranchP1.style.height = '16px';
                elements.lineBranchP2.style.height = '16px';
                await wait(500);

                elements.p1.style.opacity = '1';
                elements.p2.style.opacity = '1';
                await wait(500);

                // Projects to Tasks
                elements.lineP1Tasks.style.height = '48px';
                elements.lineP2Tasks.style.height = '48px';
                await wait(500);

                // All Tasks
                [elements.t1, elements.t2, elements.t3, elements.t4, elements.t5].forEach(t => {
                    if (t) t.style.opacity = '1';
                });
                await wait(1000);

                // --- STEP 1: Active Work (Task 1 Glow) ---
                elements.status.textContent = 'MODELLING...';
                elements.status.style.opacity = '1';
                elements.t1Glow.style.opacity = '0.6';
                await wait(1500);
                elements.t1Glow.style.opacity = '0';

                // --- STEP 2: Upstream Release (MAIN Glow) ---
                elements.status.textContent = 'UPSTREAM RELEASE';
                elements.mainLabel.style.backgroundColor = '#859900';
                await wait(500);

                // Pulse flows from MAIN to EXT
                elements.pulse.style.opacity = '0.8';
                elements.pulse.style.top = '10%';
                elements.pulse.style.left = '50%';
                elements.pulse.style.transition = 'top 0.8s ease-in, opacity 0.4s';
                await wait(10);
                elements.pulse.style.top = '30%';
                await wait(800);
                elements.pulse.style.opacity = '0';
                elements.mainLabel.style.backgroundColor = '';
                await wait(500);

                // --- STEP 3: Synchronization (Rebase) ---
                elements.status.textContent = 'REBASING...';
                elements.extLabel.style.backgroundColor = '#2aa198';
                await wait(500);

                // Pulse flows from EXT to TASK
                elements.pulse.style.top = '35%';
                elements.pulse.style.opacity = '0.8';
                elements.pulse.style.transition = 'top 0.8s ease-in, left 0.8s ease-in, opacity 0.4s';
                await wait(10);
                elements.pulse.style.top = '85%';
                elements.pulse.style.left = '35%'; // Toward Project 1
                await wait(800);
                elements.pulse.style.opacity = '0';
                elements.extLabel.style.backgroundColor = '';
                await wait(1000);

                // --- STEP 4: Promotion (Task -> Project) ---
                elements.status.textContent = 'PROMOTING TASK...';
                elements.t1.style.transform = 'scale(1.5)';
                elements.t1.style.backgroundColor = '#2aa198';
                await wait(800);

                // Animate "merge" upward to project
                elements.lineP1Tasks.style.backgroundColor = '#859900';
                await wait(800);
                elements.p1.style.backgroundColor = '#859900';
                await wait(1000);

                // --- STEP 5: Promotion (Project -> Extension) ---
                elements.status.textContent = 'MERGING TO EXTENSION...';
                elements.lineBranchP1.style.backgroundColor = '#859900';
                elements.lineBranchHorizontal.style.backgroundColor = '#859900';
                elements.lineExtBranch.style.backgroundColor = '#859900';
                await wait(800);
                elements.extLabel.style.backgroundColor = '#859900';
                await wait(1000);

                // --- STEP 6: Final Update (Release Ready) ---
                elements.status.textContent = 'SYNCED & READY';
                elements.status.style.color = '#859900';
                elements.status.style.borderColor = '#859900';

                // Cleanup highlights
                await wait(2000);
                elements.p1.style.backgroundColor = '';
                elements.extLabel.style.backgroundColor = '';
            }

            // Slide 2: Interactive Editor Animation
            async function runEditorAnimation() {
                const fsnInput = document.getElementById('editor-fsn-input');
                const synRow = document.getElementById('editor-syn-row');
                const synInput = document.getElementById('editor-syn-input');
                const parentRow = document.getElementById('editor-parent-row');
                const parentText = document.getElementById('editor-parent-text');
                const attrRow = document.getElementById('editor-attribute-row');
                const attrText = document.getElementById('editor-attribute-text');
                const title = document.getElementById('editor-title');

                if (!fsnInput) return;

                // Reset state
                fsnInput.textContent = '';
                synInput.textContent = '';
                parentText.textContent = '';
                attrText.textContent = '';
                synRow.style.opacity = '0';
                parentRow.style.opacity = '0';
                attrRow.style.opacity = '0';
                title.textContent = 'New Concept';

                await wait(800);

                // Step 1: Type FSN
                await typeText(fsnInput, "Product containing witch hazel (medicinal product)");
                title.textContent = "Product containing witch hazel (medicinal product)";
                await wait(500);

                // Step 2: Show SYN
                synRow.style.opacity = '1';
                await wait(200);
                await typeText(synInput, "Witch hazel-containing product");
                await wait(600);

                // Step 3: Show Parent
                parentRow.style.opacity = '1';
                await wait(200);
                await typeText(parentText, "Medicinal product (product)");
                await wait(600);

                // Step 4: Show Attribute
                attrRow.style.opacity = '1';
                await wait(200);
                await typeText(attrText, "Witch hazel (substance)");
            }

            // Slide 4: Interactive Review Animation
            async function runReviewAnimation() {
                const feedback = document.getElementById('review-feedback-dashboard');
                const responseArea = document.getElementById('author-response-area');
                const banner = document.getElementById('feedback-banner');

                if (!feedback) return;

                // Reset state
                feedback.style.opacity = '0';
                banner.style.opacity = '0';
                banner.style.transform = 'translate(-50%, -100%)';
                responseArea.textContent = 'Write a reply...';

                await wait(1000);

                // Step 1: Reveal Peer Feedback
                feedback.style.opacity = '1';
                await wait(1500);

                // Step 2: Author Responds
                await typeText(responseArea, "Validated constraints. Finding site updated to 'Lung structure'.", 40);
                await wait(800);

                // Step 3: Feedback Submitted Banner
                banner.style.opacity = '1';
                banner.style.transform = 'translate(-50%, 0)';
            }

            function goToSlide(index) {
                if (index < 0 || index >= totalSlides) return;
                currentIndex = index;
                updateSlideState();
            }

            prevBtn.addEventListener('click', () => goToSlide(currentIndex - 1));
            nextBtn.addEventListener('click', () => goToSlide(currentIndex + 1));

            document.addEventListener('keydown', (e) => {
                if (e.key === 'ArrowRight' || e.key === 'Space') goToSlide(currentIndex + 1);
                else if (e.key === 'ArrowLeft') goToSlide(currentIndex - 1);
            });

            updateSlideState();
        });
    </script>
</body>

</html>
